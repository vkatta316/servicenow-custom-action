		    -Pcoverage \
		    -Dsonar.token=bc30d5fcb3aa234aef0ff13052c72f28bf75d8af \
		    -Dsonar.host.url=https://sonarcloud.io \
		    -Dsonar.organization=sonar-projects-validation \
		    -Dsonar.projectKey=sonar-projects-validation_devops-project-sonar'
    }
